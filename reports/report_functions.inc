function term_names() {
    $sql = 'SELECT term_id, term_name FROM term';
    $result = $GLOBALS['dbh']->Execute($sql);
    $names = array();
    while ($row = $result->FetchRow()) {
        $names[$row['term_id']] = $row['term_name'];
    }
    return $names;
}

