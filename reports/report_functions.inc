function term_years($termsused, $terms, $years) {
    $term_years = array();
    foreach ($termsused as $i) {
        $term_years[] = array('term' => $terms[$i], 'year' => $year[$i]);
    }
    return $term_years;
}

function sql_term_year_clause($termsused, $term, $year, $term_table, $year_table = '') {
    if ($year_table == '') {
        $year_table = $term_table;
    }

    $i = 0;
    foreach ($termsused as $index) {
        if ($i == 0) {
            $sql =  " ($term_table.term_id = '".$term[$index];
            $sql .= "' AND $year_table.year = '".$year[$index]."') ";
        } else {
            $sql .=  " OR ($term_table.term_id = '".$term[$index];
            $sql .= "' AND $year_table.year = '".$year[$index]."') ";
        }
        $i++;
    }
    return $sql;
}

function check_term_year_input($termsused, $term, $year) {
    if (sizeof($termsused) < 1 || sizeof($term) < 1 || sizeof($year) < 1
            || !is_array($termsused) || !is_array($term) || !is_array($year))
    {
        return false;
    } else {
        return true;
    }
}

function boldify(&$x) {
    $x = "<b>$x</b>";
    return $x;
}

function row_class() {
    static $i = 1;
    $i = ($i + 1) % 2;
    return "row${i}d";
}

function report_signature() {
    // Date format ex: November 7, 2002 (5:25 pm) 
    return "Report generated by ".BRAND_NAME." on ".date('F')." ".date('j')
        .", ".date('Y')." (".date('g').":".date('i')." ".date('a').")\n";
}

function export_file_form($tsv) {
    $tsv .= report_signature();

    $html .= '<form action="'.$PHP_SELF.'" method="post" name="myform">';
    $html .= '<input type="submit" name="export" value=" Export to File " />';
    $html .= '<input type="hidden" name="export_string" value="';
    $html .= urlencode(serialize($tsv)) . '" />';
    $html .= '<input type="hidden" name="sql_or_string" value="string" />';
    $html .= '</form>';
    return $html;
}

