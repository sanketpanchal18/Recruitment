/*
 Filename: shortlist.class
 Description: Keeps track of the shortlisted students and the job code of the current shortlist we are submitting.
*/

class shortlist{
	var $students = array();
	var $job_id;
	var $interview_info;
	var $student_names = array();

	function shortlist($students, $job_id){
		$this->students = $students;
		$this->job_id = $job_id;
	}

	function restore($shortlist){
		$this->students = $shortlist->students;
		$this->job_id = $shortlist->job_id;
		$this->interview_info = $shortlist->interview_info;
	}

	function save_students(){
		for($i=0;$i<count($this->students);$i++){
			$sql = "INSERT INTO students_shortlisted(job_id, student_number)
				VALUES('" . $this->job_id . "', '" . $this->students[$i] . "')";
			$result = $GLOBALS['dbh']->Execute($sql);
			if (!$result){
				error ("Could not add " . getStudentName($this->students[$i]) . " to shortlist.");
			}else{
				$this->student_names[] = getStudentName($this->students[$i]);	
			}
		}
	}
}
